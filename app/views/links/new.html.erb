<div class="section">
  <h1>Add Link</h1>
  <%= form_for(@link) do |f| %>

    <div class="field">
      <%= f.label :url, 'URL', class: 'label' %>
      <div class="control">
        <%= f.text_field :url, required: true, autofocus: true, class: 'input'  %>
      </div>
    </div>

    <div class="field">
      <%= f.label :title, class: 'label' %>
      <div class="control">
        <%= f.text_field :title, required: true, class: 'input' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :tag_list, 'Tags (separated by commas)', class: 'label' %>
      <div class="control">
        <%= f.text_field :tag_list, class: 'input' %>
      </div>
    </div>

    <div class="field">
      <%= f.submit 'Save', class: 'button is-primary' %>
    </div>

  <% end %>
</div>