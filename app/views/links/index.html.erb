<div class="section">
  <h1>Game Dev Links</h1>
  <%= link_to('Add Link', :new_link, class: 'button is-primary') %>
</div>

<div class="section links">
  <% @links.each do |link| %>
    <div class="link-container">
			<div class="icon">
				<% if link.icon %>
					<i class="fa fa-<%= link.icon %>"></i>
				<% end %>
			</div>
			<div class="content">
	      <%= link_to(link.title, link.url, class: 'link') %>
  	    <% if link.tags %>
    	    <div class="tags">
        	  <% link.tags.each do |t| %>
      	      <%= link_to(t, links_path(tag: t.to_s)) %>
          	<% end %>
	        </div>
  	    <% end %>
			</div>
    </div>
  <% end %>
</div>
